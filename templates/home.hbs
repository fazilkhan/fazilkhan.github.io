<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
      
    <!-- Your CSS files -->
    <link rel="stylesheet" href="{{#if relativePrefix}}{{relativePrefix}}/{{/if}}style/default.css">
    
    <!-- google fonts: Roboto Condensed(super-font) and Lora(sub-font) -->
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Encode+Sans+Semi+Expanded&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Odibee+Sans&family=Oleo+Script+Swash+Caps&display=swap" rel="stylesheet">
  
    <title>{{name}} projects page</title>
  </head>
    
  <style>
    {{#if css}}
      {{css}}
    {{/if}}

    body {
      {{#if text_color}}
        color: {{ text_color }} !important;
      {{/if}}
      {{#if bg_color}}
        background: {{ bg_color }} !important;
      {{/if}}
    }
  </style>
  <body class="light-theme">
    <div class="container homepage"><!-- start of the main container-->
        <div class="row justify-content-center"><!-- headline and intro -->
            <div class="col-lg-10">
                <h1 class="headline-name super-font">{{name}}</h1>
                <div class="sub-font body-text">
                    <p>{{ bio }}</p>
                    <ul class='spread'>
                        {{#each links}}
                          <li><a href="{{this.target}}" target="_blank"><img class="social" src="{{ this.socialimage }}"></a></li>
                        {{/each}}
                    </ul>
    
                  <div class="row">
                    {{#each pages}}
                            <div class="col-sm-4">
                              <div class="card">
                                <div class="card-img-top">
                                  <a href="{{ this.slug }}/">
                                    <img class='preview-image' src="{{this.image}}" alt="There is supposed to be an image here">
                                  </a>
                                <div class="card-body">
                                  <h5 class="subhead super-font"><a href="{{ this.slug }}/" style="color: rgb(48, 48, 48)">{{ this.title }}</a></h5>
                                  <p class="actual_slug">{{subtext}}</p>
                                </div>
                                </div>
                              </div>
                            </div>
                            {{!-- <div class="col-sm-7">
                              <h3 class="subhead super-font"><a href="{{ this.slug }}/" style="color: rgb(48, 48, 48)">{{ this.title }}</a></h3>
                              <p class="actual_slug">{{subtext}}</p>
                            </div> --}}
                          
                    
                    
                    {{/each}}
                  </div>
                </div>
            </div>
        </div>
        
      </div><!-- end of the main container-->
   
      
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
  </body>
</html>
